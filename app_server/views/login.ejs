<div id="login">
    <h3 class="text-center text-white pt-5">Login form</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="/login" method="post">
                        <h3 class="text-center text-info">Giriş</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">Kullanıcı adı:</label><br>
                            <input type="text" name="username" id="userame" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Şifre:</label><br>
                            <input type="text" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-md" value="Giriş">
                            <a href="/login/signup" class="btn btn-info btn-md">Kayıt</a>
                        </div>

                    </form>
                </div>
                <% if (typeof firstName!="undefined") { %>
                <h3><%= firstName %> </h3>
                <% } %>
                <% if (typeof lastName!="undefined") { %>
                <h3><%= lastName %> </h3>
                <% } %>
            </div>
        </div>
    </div>
</div>